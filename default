server {
    listen 8080;
    listen [::]:8080;

    root /home/site/wwwroot/public; # Laravel public directory
    index index.php index.html index.htm;

    # Optional: remove or replace with your custom domain if used
    # server_name example.com www.example.com;

    port_in_redirect off;

    # Logging for debugging (optional)
    access_log /dev/stdout;
    error_log /dev/stderr;

    location / {
        index index.php index.html index.htm hostingstart.html;
        try_files $uri $uri/ /index.php?$args; # Laravel route handling
    }

    # Optional custom error page handling (disabled to allow Laravel to handle errors)
    # error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /html/;
    }

    # Block access to .git directories
    location ~ /\.git {
        deny all;
        access_log off;
        log_not_found off;
    }

    # PHP handling via FastCGI (PHP-FPM)
    location ~ [^/]\.php(/|$) {
        fastcgi_split_path_info ^(.+?\.php)(/.*)?$;
        fastcgi_pass 127.0.0.1:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param QUERY_STRING $query_string;
        fastcgi_param HTTP_PROXY "";

        fastcgi_intercept_errors on;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 3600;
        fastcgi_read_timeout 3600;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }
}